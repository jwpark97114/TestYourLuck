<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".LotsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/peopleCountMinusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/peopleCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="25sp" />

        <Button
            android:id="@+id/peopleCountPlusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="꽝 갯수"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/unLuckyMinusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/unLuckyCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="25sp" />

        <Button
            android:id="@+id/unLuckyPlusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/luckTxt01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1번"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/luckTxt02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2번"
            android:layout_marginLeft="20dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/luckTxt03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3번"
            android:layout_marginLeft="20dp"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/luckTxt04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4번"
            android:layout_marginLeft="20dp"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/luckTxt05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="5번"
            android:layout_marginLeft="20dp"
            android:textSize="25sp" />


    </LinearLayout>

    <Button
        android:id="@+id/testLuckBtn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제비 뽑기" />

    <Button
        android:id="@+id/replayBtn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="다시하기" />





</LinearLayout>