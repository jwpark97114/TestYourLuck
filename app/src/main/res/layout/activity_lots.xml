<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".LotsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원 :"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/peopleCountMinusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/peopleCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/peopleCountPlusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="꽝 갯수 :"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/unluckyMinusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/unluckyCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/unluckyPlusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20sp"/>







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/luckTxt01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1번"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/luckTxt02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2번"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/luckTxt03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3번"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/luckTxt04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4번"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/luckTxt05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5번"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"/>





    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제비뽑기"
        android:layout_marginTop="10dp"/>



</LinearLayout>